<Window x:Name="MonthViewWindow" x:Class="YetAnotherCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="CalendarGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
 
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid x:Name="MonthButtonsGrid" Grid.Row="0" Grid.ColumnSpan="7">
        </Grid>

        <Label Content="Sunday" Grid.Row="1" Grid.Column="0" />
        <Label Content="Monday" Grid.Row="1" Grid.Column="1" />
        <Label Content="Tuesday" Grid.Row="1" Grid.Column="2" />
        <Label Content="Wednesday" Grid.Row="1" Grid.Column="3" />
        <Label Content="Thursday" Grid.Row="1" Grid.Column="4" />
        <Label Content="Friday" Grid.Row="1" Grid.Column="5" />
        <Label Content="Saturday" Grid.Row="1" Grid.Column="6" />
        

    </Grid>
</Window>
